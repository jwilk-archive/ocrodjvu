set -e -u
PYTHON=${PYTHON:-python}
"$PYTHON" -m pylint --version >/dev/null
if [ $# -eq 0 ]
then
    pyscripts=$(grep -l -r '^#!.*python' .)
    set -- lib tests $pyscripts
fi
set -- --extension-pkg-whitelist=djvu.decode,djvu.sexpr "$@"
set -- --load-plugins=pylint.extensions.check_elif "$@"
log=$(mktemp -t pylint.XXXXXX)
"$PYTHON" -m pylint "$@" > "$log" || [ $? != 1 ]
! grep '^\w:' "$log" \
| grep -v ': missing-docstring \[\w' \
| grep -v -P '^\w: (?!lib/).*: missing-docstring ' \
| grep -v ": redefined-builtin \\[.*\\] Redefining built-in 'file'" \
| grep '.' || exit 1
rm "$log"

# vim:ts=4 sts=4 sw=4 et
